{
  "$schema": "https://raw.githubusercontent.com/Azure/BatchAI/master/schemas/2018-05-01/job.json",
  "properties": {
    "nodeCount": 1,
    "customToolkitSettings": {
      "commandLine": "Rscript $AZ_BATCHAI_JOB_MOUNT_ROOT/resources/R/mnist_cnn.R --datadir $AZ_BATCHAI_JOB_MOUNT_ROOT/resources/mnist --outputdir $AZ_BATCHAI_OUTPUT_ALL --conv1filters 64 --conv2filters 128 --denseunits 128"
    },
    "stdOutErrPathPrefix": "$AZ_BATCHAI_JOB_MOUNT_ROOT/logs",
    "outputDirectories": [
      {
        "pathPrefix": "$AZ_BATCHAI_JOB_MOUNT_ROOT/output",
        "id": "ALL"
      }
    ],
    "mountVolumes": {
      "azureFileShares": [
        {
          "azureFileUrl": "https://batchairsa.file.core.windows.net/logs",
          "relativeMountPath": "logs"
        },
        {
          "azureFileUrl": "https://batchairsa.file.core.windows.net/resources",
          "relativeMountPath": "resources"
        },
        {
          "azureFileUrl": "https://batchairsa.file.core.windows.net/output",
          "relativeMountPath": "output"
        }
      ]
    },
    "containerSettings": {
      "imageSourceRegistry": {
        "image": "angusrtaylor/batchair:latest"
      }
    }
  }
}
