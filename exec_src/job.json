{
    "$schema": "https://raw.githubusercontent.com/Azure/BatchAI/master/schemas/2018-05-01/job.json",
    "properties": {
        "nodeCount": 1,
        "customToolkitSettings": {
            "commandLine": "Rscript --vanilla $AZ_BATCHAI_INPUT_SCRIPT/cifar_cnn.R",
            "commandLineArgs": "32"
        },
        "stdOutErrPathPrefix": "$AZ_BATCHAI_JOB_MOUNT_ROOT/logs",
        "mountVolumes": {
            "azureFileShares": [
                {
                    "azureFileUrl": "https://batchairsa.file.core.windows.net/logs",
                    "relativeMountPath": "logs"
                },
                {
                    "azureFileUrl": "https://batchairsa.file.core.windows.net/scripts",
                    "relativeMountPath": "R"
                }
            ]
        },
        "containerSettings": {
            "imageSourceRegistry": {
                "image": "angusrtaylor/batchair:latest"
            }
        }
    }
}